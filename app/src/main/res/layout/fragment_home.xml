<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.HomeFragment">

    <ImageView
        android:id="@+id/ivLord"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/thailand" />

    <TextView
        android:id="@+id/tvOpenLord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Open Lord Activity" />
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenMaps"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Open Maps"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/tvOpenLord"/>

</RelativeLayout>